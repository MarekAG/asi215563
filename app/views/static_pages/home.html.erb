<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Microposts: </h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Crower</h1>

    <h2>
      Crower is a nice and sneaky substitute for Twitter.
    </h2>

    <%= link_to "Sign up here!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("http://www.supergraphictees.com/wp-content/uploads/2013/01/CROWER-WHITE01-150x150.jpg", alt: "Crowerlogo") %>
<% end %>
